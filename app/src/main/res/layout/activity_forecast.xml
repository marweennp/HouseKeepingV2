<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.ForecastActivity">

    <!-- ToolBar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include layout="@layout/include_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <!-- Container -->
    <RelativeLayout
        android:id="@+id/rl_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">

        <RelativeLayout
            android:id="@+id/rl_forecast_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/grey_200">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_forecast_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/text_from_date"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_forecast_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/tv_forecast_from_date"
                android:clickable="true"
                android:focusable="false"
                android:hint="00/00/0000"
                android:inputType="date"
                android:textColor="@color/light_bg_dark_secondary_text"
                android:theme="@style/MyEditTextStyle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_forecast_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/et_forecast_start_date"
                android:text="@string/text_to_date"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_forecast_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/tv_forecast_to_date"
                android:clickable="true"
                android:focusable="false"
                android:hint="00/00/0000"
                android:inputType="text"
                android:textColor="@color/light_bg_dark_secondary_text"
                android:theme="@style/MyEditTextStyle" />

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:id="@+id/v_forecast_top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_forecast_date"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:id="@+id/rl_forecast_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v_forecast_top_divider">

            <!-- Progress View -->
            <include layout="@layout/include_loading_view" />

            <!-- Orders List -->
            <ListView
                android:id="@+id/lv_forecast_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/colorPrimary"
                android:dividerHeight="2dp"
                android:drawSelectorOnTop="true" />

            <!-- Empty View -->
            <include layout="@layout/include_empty_view" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
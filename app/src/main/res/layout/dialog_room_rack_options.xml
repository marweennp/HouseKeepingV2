<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_dialog_room_rack_options_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dialog_room_rack_options_title"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_view_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_check_guests"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_view_guest"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_change_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_change_room_state"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_change_state"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_claim_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_claim_maintenance_order"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_claim_order"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_view_room_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_check_room_state"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_view_room_state"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:alpha=".5"
        android:background="@color/colorSecondary" />


    <!-- Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dialog_room_rack_options_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/all_cancel"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</LinearLayout>

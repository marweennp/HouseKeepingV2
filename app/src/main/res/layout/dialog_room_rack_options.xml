<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_dialog_room_rack_options_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_dialog_room_rack_options_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dialog_room_rack_options_title"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_dialog_room_rack_options_guests"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:layout_height="20dp"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_dialog_room_rack_options_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_toStartOf="@id/tv_dialog_room_rack_options_guests"
                app:srcCompat="@drawable/ic_person_white_18dp"
                app:tint="@color/white" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_dialog_room_rack_options_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_view_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_check_guests"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_view_guest"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_change_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_change_room_state"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_change_state"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_claim_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_claim_maintenance_order"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_claim_order"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha=".5"
        android:background="@color/colorSecondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_room_rack_options_view_room_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/dialog_room_rack_options_check_room_state"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryDark" />
    <View
        android:id="@+id/v_dialog_room_rack_options_view_room_state"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:alpha=".5"
        android:background="@color/colorSecondary" />


    <!-- Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dialog_room_rack_options_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/all_cancel"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</LinearLayout>

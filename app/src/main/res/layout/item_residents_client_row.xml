<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Name -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_client_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ssssss"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Arrengement -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_client_row_arreng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="dddddd"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- First/Last serv -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_client_row_fl_serv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="dddddd"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- date time -->
    <RelativeLayout
        android:id="@+id/rl_client_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_client_row_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_today_white_24dp"
            app:tint="@color/colorSecondary" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_client_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/img_client_row_date_icon"
            android:text="date"
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>
